
cat document-topic-distributuions1_contentID.csv | awk -v f=usa2cont.csv 'BEGIN{FS=",";
     while( (getline line<f) > 0 ) {
       l=split(line,a,",")
       hiz[a[1]]=a[2]  # IDusage, IDcontent
     }
   }
   {idco=$1
    for(idus in hiz){
      idco2 = hiz[idus]
      if(idco2==idco){
        idus2 = idus;
        break;
      }
    }
    printf "%d",idus2
    for(i=2;i<=NF;i++){
      val=$i
      printf ",%s",val
    }
    printf "\n"}' > document-topic-distributuions1_usageID.csv



## ONA ##

while read line; do
  usageID=`echo $line | awk 'BEGIN{FS=","}{print $1}'`
  conteID=`echo $line | awk 'BEGIN{FS=","}{print $2}'`
  distline=`grep "^$conteID," document-topic-distributuions1_contentID.csv`
  distline2=`echo $distline | awk 'BEGIN{FS=","}{print $2; for(i=3;i<=NF;i++){print ","$i}}'`
  echo $usageID","$distline2
done < usa2cont.csv > document-topic-distributuions1_usageID.csv

